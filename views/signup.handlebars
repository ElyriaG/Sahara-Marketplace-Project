<div class="signupDiv">
    <h3 class="text-danger text-center">
        {{#if userExists}}{{userExists.userExists}}{{else}}{{/if}}
    </h3>
        <div class="container mt-5 col-6 container-signup">
            <form class="signUpForm" method="POST" action="/api/EmailAndPassword">
                <div class="form-group pt-3">
                    <label for="userFullName">Enter Full Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Full Name"
                        name="UserFullName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Your Email address</label>
                    <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email"
                        name="UserEmail">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Create Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="UserPassword">
                </div>
               
                <button type="submit" class="btn btn-warning mb-2" id="submitButton" value="search">Sign Up</button>
            </form>
        </div>
    </div>

