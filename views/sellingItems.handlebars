<div class="container bg-warning pb-4">
    <div class="row text-center">
        <h1 class="text-center">Your Current Items for Sale</h1>
    </div>
    <div class="container" id="newItems">
        <div class="row justify-content-center">
            {{#each products}}
            <div class="col-3 border border-dark bg-light m-1">
                <div id="imageModifyDiv">
                    <img src="{{this.image}}" class="card-img-top img-fluid product pointer" alt="productImage"
                        data-id="{{id}}">
                </div>
                <div class="featured-info">

                    <h5 class="product pointer" style="text-align: center" data-id="{{id}}">{{this.product_name}}</h5>
                    <h2>${{this.product_price}}</h2>
                    <p>{{this.product_description}}</p>

                </div>
            </div>
            {{/each}}

        </div>
    </div>


</div>

